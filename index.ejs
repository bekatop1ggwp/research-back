<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
  </head>
  <body>
    <nav>
      <div>sdf</div>
      <div>sdf</div>
      <h1>Сюда писать ответы ^</h1>

      <textarea name="" id="content" cols="50" rows="5"></textarea>
      <button id="button_cheat">Отправить</button>
    </nav>
    <main><%-html%></main>
    <script>
      const ws = new WebSocket("ws://localhost:5000/test");
      const content = document.getElementById("content");
      const btn = document.getElementById("button_cheat");

      let text = "";

      ws.onopen = () => {
        console.log("connected");
      };

      content.oninput = (e) => {
        text = e.target.value;
      };

      btn.onclick = () => {
        ws.send(
          JSON.stringify({
            message: text,
          })
        );
        console.log(text);
      };
    </script>
  </body>
</html>
